- content_for :js do
  =javascript_include_tag "photographers_list"
- @page_title = "Фотографы"  
  
.photographers_page
  %h2 Фотографы
  %ul.photographers_list.list
    - @users.each do |user|
      %li
        =link_to user do
          .thumbnail
            = image_tag user.avatar.url(:thumb)
          .meta
            %h3
              = user
            .description
              = user.about
          .cl
