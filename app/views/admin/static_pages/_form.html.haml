-form_for [:admin, @static_page] do |f|
  %p
    =f.label "Заголовок"
    =f.text_field :name
  %p
    =f.label "Название ссылки (на англ.) - http://domain.com/"
    =f.text_field :slug
  %p
    =f.label "Текст"
  .field.wide
    =f.text_area :body, :class => "mceEditor"
  .field.wide
    =f.label :weight, "Вес (чем меньше вес, тем страница в списках)"
    =f.text_field :weight
  %p
    =f.submit "Сохранить"
  =link_to "Назад", :publications
