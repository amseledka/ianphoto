- content_for :css do
  = stylesheet_link_tag "photographer_profile"
  = stylesheet_link_tag "calendar"

- content_for :js do
  = javascript_include_tag "photographer_profile"
  = javascript_include_tag "calendar"
  = javascript_include_tag "skypeCheck"

- @page_title = [@user.first_name, " ", @user.last_name].join

.photographer_profile
  %h2
    = "#{@user.first_name}&nbsp;#{@user.last_name}".html_safe

  %ul.menu
    %li#photos.current= link_to "Фотографии", "#"
    %li#info= link_to "Контактная информация", "#"
    %li#calendar= link_to "Календарь", "#"

  .tab_content#photos_tab
    %ul.galleries
      = render @user.categories

  .tab_content#info_tab.hidden
    .info
      %ul
        %li 
          %span Цена: 
          от 
          = @user.price
          $ за день съемки
        %li 
          %span Город: 
          = @user.city
        %li
          %span Ближайшая дата:
          11.02
          %small=link_to "календарь", "#", :id => "show_calendar_tab"
        %li &nbsp;
        %li 
          %span Телефон: 
          = @user.phone
        %li
          %span Skype:
          = image_tag "http://mystatus.skype.com/smallicon/#{@user.skype}", :style => "border: none;", :width => "16"
          = @user.skype
      .description
        %h3 О себе
        = @user.about
    .userpic= image_tag @user.avatar.url(:small)

  .tab_content#calendar_tab.hidden
    %ul.legend
      %li
        .busy_day 12
        &mdash; день занят
      %li
        .free_day 16
        &mdash; день свободен
      %li
        %small Уточнить информацию и сделать заказ можно по телефону
        = @user.phone
        %br/
        %small= link_to "Контактная информация", "#", :id => "show_info_tab"

    %ul.calendar_months
      - (-5..6).each do |month_number|
        -desired_date = month_number.months.since
        %li{:id => month_anchor(desired_date, :include_anchor => false)}
          - calendar(:year => desired_date.year, :month => desired_date.month, :first_day_of_week => 1, :month_header => true, :next_month_text => next_month_link(desired_date), :previous_month_text => previous_month_link(desired_date), :calendar_title => month_header(desired_date)) do |date|
            - if @user.calendar_records.exists?(:date => date.midnight)
              - [date.mday, {:class => "busy"}]
            -else
              - [date.mday, {:class => "free"}]
