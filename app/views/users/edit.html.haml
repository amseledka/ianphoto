- content_for :css do
  = stylesheet_link_tag "user_edit"
  = stylesheet_link_tag "calendar"
  
- content_for :js do
  = javascript_include_tag "calendar_date"
  
- @page_title = "Настройки"
.edit_profile
  %h2 Основная информация
  = render "form"
  %hr
  %h2 Изменить адрес электронной почты или пароль
  = render "signup_form"
  %hr
  %h2 Календарь
  .calendar
    -calendar(:year => Time.now.year, :month => Time.now.month, :first_day_of_week => 1, :month_header => true) do |date|
      -render "admin/calendar_records/calendar_record", :date => date.midnight
    %ul.legend
      %li
        .busy_day 12
        &mdash; день занят
      %li
        .free_day 16
        &mdash; день свободен