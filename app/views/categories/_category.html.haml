- if category.photos.present?
  - cycle_class = cycle(:left, :right, :name => :leftright)
  %li{ :class => cycle_class }
    = link_to category do
      .image
        = image_tag category.photos.first.picture.url(:thumb)
      - if (other_photos = category.photos.slice(1..2)).present?
        - other_photos.each do |other_photo|
          .image{:class => cycle(:second, :third)}
            = image_tag other_photo.picture.url(:thumb), :style => "-webkit-transform:rotate(#{rand(12)-6}deg); -moz-transform:rotate(#{rand(12)-6}deg); -o-transform:rotate(#{rand(12)-6}deg);", :width => "400", :height => "320"
      .caption
        = category.name 